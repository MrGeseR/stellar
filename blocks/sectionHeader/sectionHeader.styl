.sectionHeader
  padding 0 0
  display inline-block
  position relative
  margin-bottom 1rem
  &__caption
    color #636363
    font-weight 300
    font-size 2rem
    margin 0 0 1.5rem 
    line-height 1.5
  &__description
    font-size 1.25rem
    letter-spacing -0.025rem
    margin 2rem 0
  &__underline
    height 2px
    width 7rem
    border none
    background -webkit-linear-gradient(left, #efa8b0, #a89cc8, #8cc9f0)
    background -moz-linear-gradient(left, #efa8b0, #a89cc8, #8cc9f0)
    background linear-gradient(to right, #efa8b0, #a89cc8, #8cc9f0)
    &_left
      margin 1.25rem 0
  &_center
    display block
    text-align center
    margin-bottom 3rem
  
    

